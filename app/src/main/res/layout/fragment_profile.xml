<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#CBEBFA"
    >

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_pic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/round_curve_profile"
        android:layout_marginTop="300dp"
        >
        <TextView
            android:id="@+id/account_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="Account Deatils :"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:lineBreakStyle="loose"
            />
        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="User Id : Team_Coders"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/account_details"
            />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="User Email : team@universe.com"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/user_id"
            />
        <TextView
            android:id="@+id/user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="User contact : (+91) 8236373875"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/user_email"
            />
        <Button
            android:layout_marginTop="290dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Change Password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:background="@drawable/round_bar_listview"

            ></Button>
        <Button
            android:id="@+id/log_out"
            android:layout_marginTop="350dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Log out"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:background="@drawable/round_bar_listview"

            ></Button>


    </RelativeLayout>



</FrameLayout>