<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsFragment"
    android:background="#FFF5B8">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Setting"
        style="@style/TextAppearance.AppCompat.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="637dp"
        android:id="@+id/setting_layout"
        android:layout_marginTop="130dp"
        android:background="@drawable/round_curve_profile">


        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display : Light"
            android:gravity="center_horizontal"
            android:textSize="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_curve_profile"
            android:elevation="25dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rate_app"
            android:text="Rate App"
            android:gravity="center_horizontal"
            android:textSize="22dp"
            android:layout_below="@id/display"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_curve_profile"
            android:elevation="25dp"
            /><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/open_source"
        android:text="Open-Source Licence"
        android:gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_below="@id/rate_app"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_curve_profile"
        android:elevation="25dp"
        /><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/privacy"
        android:text="Privacy Policy"
        android:gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_below="@id/open_source"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_curve_profile"
        android:elevation="25dp"
        /><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:text="Version - 1.0.1"
        android:gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_below="@id/privacy"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_curve_profile"
        android:elevation="25dp"
        />


    </RelativeLayout>


</FrameLayout>